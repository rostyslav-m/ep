<% if notice %>
<p><%= notice %></p>
<% end %>

<%= link_to 'Your Cart', cart_path(session[:cart_id]) if session[:cart_id] %>

<h1>Catalog of Activities</h1>

<% @products.each do |product| %>
  <%= image_tag(product.image_url, :style => "height:100px") %>
  <h3><%= product.title %></h3>
  <%= truncate(product.description, length: 200) %><br>
  <%= number_to_currency(product.price) %>
  <%= button_to 'Add to Cart', line_items_path(product_id: product) %><br><hr>
<% end %>